@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    var fireError = () => {};

    $(document).ready(() => {
        $('#closeToast').click(() => $('.toast').toast('hide'));

        fireError = (text) => {
            
        }
    });

    
</script>

@if (ViewData["NotFound"] != null)
{
<script>
    $(document).ready(() => {
        $('#toastBody').text("@ViewData["NotFound"]");
        $('.toast').toast('show');
    });
</script>
}

<div aria-live="polite" aria-atomic="true" style="position: relative;">
    <div class="toast" style="position: fixed; top: 86px; right: 24px;" data-delay="10000">
        <div class="toast-header">
            <strong class="mr-auto">Web Fitness</strong>
            <small>Error</small>
            <button id="closeToast" type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div id="toastBody" class="toast-body text-danger pr-4 mr-3">
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="~/css/home.css">

<section class="text-center h-100">
    <h1 class="home-title display-4">Choose a training method</h1>
    <div class="d-flex flex-column h-100 align-items-center">
        <div class="row container mt-5 w-100 justify-content-center text-dark" style="height: 200px">
            <a asp-action="List" asp-controller="Meetings" asp-route-eventTypeName="TRX" class="text-dark">
                <div class="card training-type-card h-100 text-center p-4 mr-4 d-flex align-items-center justify-content-center" style="width: 200px">TRX</div>
            </a>

            <a asp-action="List" asp-controller="Meetings" asp-route-eventTypeName="Yoga" class="text-dark">
                <div class="card training-type-card h-100 text-center p-4 mr-4 d-flex align-items-center justify-content-center" style="width: 200px">Yoga</div>
            </a>

            <a asp-action="List" asp-controller="Meetings" asp-route-eventTypeName="Tabata" class="text-dark">
                <div class="card training-type-card h-100 text-center p-4 d-flex align-items-center justify-content-center" style="width: 200px">Tabata</div>
            </a>
        </div>

        <div class="row container mt-4 w-100 justify-content-center text-dark" style="height: 200px">
            <a asp-action="List" asp-controller="Meetings" asp-route-eventTypeName="Pilates" class="text-dark">
                <div class="card training-type-card h-100 text-center p-4 mr-4 d-flex align-items-center justify-content-center" style="width: 200px">Pilates</div>
            </a>

            <a asp-action="List" asp-controller="Meetings" asp-route-eventTypeName="KickBox" class="text-dark">
                <div class="card training-type-card h-100 text-center p-4 mr-4 d-flex align-items-center justify-content-center" style="width: 200px">KickBox</div>
            </a>

            <a asp-action="List" asp-controller="Meetings" asp-route-eventTypeName="HIIT" class="text-dark">
                <div class="card training-type-card h-100 text-center p-4 d-flex align-items-center justify-content-center" style="width: 200px">H.I.I.T</div>
            </a>
        </div>
    </div>
</section>

